
@{
    ViewBag.Title = "Product";
}


@section styles{
    <style>
        .detail-item {
            border-left: 2px solid #00bcd4;
            padding-left: 20px;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .divisionLine {
            background-color: #b4b4b4;
            height: 2px;
            width: 100%;
            margin-top: 30px;
        }

        .detail-panel {
            border-top: 5px solid #ad7654;
            background-color: #f8f8f8;
            padding-left: 35px;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .displayTitleImg {
            width: 100%;
            height: 600px;
        }
    </style>
}

<img class="displayTitleImg p-0 m-0"
     src="https://media.cntraveler.com/photos/5eb18e42fc043ed5d9779733/16:9/w_2580,c_limit/BlackForest-Germany-GettyImages-147180370.jpg"
     alt="">

<div class="w3-col m1" style="height: 10px"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main w3-col m10" id="contain">

    <nav aria-label="breadcrumb" class="m-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">首頁</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <a href="exhibitionList2.html">展覽列表</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">詳細資訊</li>
        </ol>
    </nav>

    <h1 class="w3-margin">{{ title }}</h1>

    <div class="row mt-5">
        <div class="col-md-4">


            <div class="detail-panel">
                <div class="detail-item">
                    <h4>
                        <b>展覽時間</b>
                    </h4>{{ start }} ~ {{ end }}
                </div>
                <div class="detail-item">
                    <h4>
                        <b>活動地點</b>
                    </h4>{{ location }}
                </div>
                <div class="detail-item">
                    <h4>
                        <b>主辦單位</b>
                    </h4>{{ organizer }}
                </div>
            </div>


            <br>

            <div class="ticketPurchase">
                <h3>票券價格</h3>
                <br>
                <div class="d-flex justify-content-between">
                    <div class="h4 d-inline-block">NT$ {{ price }} 元</div>
                </div>
                <br>
                <button class="w3-button w3-green d-inline-block">購票</button>
            </div>

        </div>
        <div class="col-md-8">
            {{ content }}
        </div>
    </div>

    <div class="divisionLine"></div>
    <h3 class="mt-3 mb-3">參展廠商</h3>

    <div class="w3-row-padding w3-stretch">
        <div class="w3-col l3 m6 w3-margin-bottom" v-for="vendor in exhibitorList">
            <div class="w3-display-container">
                <div class="w3-display-topleft w3-black w3-padding">{{ vendor.name }}</div>
                <img :src="vendor.image" alt="House" style="width:100%">
            </div>
        </div>
    </div>




</div>
<div class="w3-col m1"></div>

<script>
    new Vue({
        el: '#contain',
        data() {
            return {
                start: '',
                end: '',
                price: 0,
                title: '',
                location: '',
                organizer: '',
                website: '',
                imgUrl: '',
                exhibitorList: [],
                eid: '@ViewBag.Id',
                content :''
            }
        },
        created: function () {
            const self = this;
            fetch('/api/ShopApi/GetEventDetail/' + self.eid )
                .then(res => res.json())
                .then(res => {
                    self.start = res.start;
                    self.price = res.price;
                    self.end = res.end;
                    self.title = res.name;
                    self.organizer = res.organizer;
                    self.location = res.location;
                    self.imgUrl = res.image;
                    self.content = res.eventinfo;
                })
        },
        methods: {}
    })
</script>