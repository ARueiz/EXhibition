@{
    ViewBag.Title = "ShowHostEvent";
}

<div class="container h-100 mt-3" id="VuePage">
    <div class="row justify-content-sm-center h-100">
        <table class="table">
            <thead>
                <tr>
                    <th>name</th>
                    <th>phone</th>
                    <th>exhibitionname</th>
                    <th>startdate</th>
                    <th>enddate </th>
                    <th>---------------------- </th>
                </tr>
            </thead>
            <tr v-for="item in res">
                <td v-show="false" id="evid">{{item.evid}}</td>
                <td>{{item.name }}</td>
                <td>{{item.phone }}</td>
                <td>{{item.exhibitionname}}</td>
                <td>{{item.startdate }}</td>
                <td>{{item.enddate }}</td>
                <td>
                    @*<input type="submit" value="審核" v-on:click="AllowOrRefuse(item.evid)" v-bind:disabled="item.isOver" class="btn btn-success" />

                    <input type="submit" value="編輯" v-on:click="EditEventInfo(item.evid)" v-bind:disabled="item.isOver" class="btn btn-primary" />*@

                    <a :href=`./allowOrRefuse/?EVID=${item.evid}` class="btn btn-info" role="button" v-bind:disabled="item.isOver">審核</a>
                    <a :href=`./EditEventInfo/?EVID=${item.evid}` class="btn btn-info" role="button" v-bind:disabled="item.isOver">編輯</a>
                    <input type="submit" value="明細" v-on:click="Details(item.evid)" class="btn btn-dark"  />
                </td>

            </tr>
        </table>
        <div>
            <div class="d-flex justify-content-end">
                <input type="button" class="btn btn-light" v-on:click="GetMaterial(-1)" value="上一頁" />
                <input type="button" class="btn btn-light" v-on:click="GetMaterial(+1)" value="下一頁" />
                @*<a style="margin: 5px" type="s" v-on:click="GetMaterial()">上一頁</a>*@
                @*<a style="margin: 5px" href="#">下一頁</a>*@
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>

        var VuePage = new Vue({
            el: '#VuePage',
            data: {
                res: [],
                pageNum: 1,

            },

            mounted() {

                this.GetMaterial(0)

            },
            methods: {
                Details: function (va) {
                    axios.get('/HostApi/PostList/', + va)
                        .then(function (response) {
                            window.location.href = "/" + "host" + "/" + "DetailsHost" + "/" + va
                        })
                        .catch((err) => {
                            console.log(err)
                        });
                },
                @*AllowOrRefuse: function (va) {
                    window.location.href = "/" + "host" + "/" + "allowOrRefuse" + "/" + "?EVID=" + va
                },

                EditEventInfo: function (va) {
                    window.location.href = "/" + "host" + "/" + "EditEventInfo" + "/" + "?EVID=" + va
                },*@




                GetMaterial: function (va) {

                    if (this.pageNum + va > 0) {
                        this.pageNum = this.pageNum + va
                    }

                    axios
                        .get('/HostApi/List/' + this.pageNum)
                        .then(function (response) {
                            VuePage.res = response.data

                        })
                        .catch((err) => {
                            console.log(err)
                        });

                },


            },
            computed: {

            }
        });
    </script>
}