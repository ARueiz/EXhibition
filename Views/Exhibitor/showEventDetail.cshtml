@{
    ViewBag.Title = "showEventDetail";
}
@section styles{
    <style>

        .img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: 10% 100%;
        }

        .detail-box {
            padding: 25px;
        }

        .detail-item {
            border-left: 2px solid #00bcd4;
            padding-left: 20px;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .block-line {
            height: 1px;
            width: 100%;
            background-color: lightslategray;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .reject-btn {
            line-height: 24px;
            border: 0 none;
            border-radius: 5px;
            background-color: #f1636f;
            padding: 5px 15px;
        }

        .allow-btn {
            line-height: 24px;
            border: 0 none;
            border-radius: 5px;
            background-color: #a3e287;
            padding: 5px 15px;
        }

        .table-row-center td {
            vertical-align: middle;
        }

        .exhibitor-table {
            margin-top: 20px;
            max-height: 300px;
            overflow: auto;
        }

        .box-item {
            padding: 10px;
        }

        .edit-btn {
            text-decoration: none;
            line-height: 24px;
            border: 0 none;
            border-radius: 5px;
            background-color: #61c1f1;
            padding: 5px 15px;
            color: black;
        }

        .text-reject {
            color: #fc2c2c;
        }

        .text-allow {
            color: #0bb60b;
        }

        .form-control:focus,
        .form-control:active {
            outline: none !important;
            box-shadow: none !important
        }

        .input-reason:focus {
            border: 1px solid #fc3660
        }
    </style>
}


<div class="rwd-mt p-5 content " id="contain">
    <p class="h2"><b>{{eventData.eventname}}</b></p>
    <div class="d-block d-flex flex-wrap">
        <div class="col-md-5 detail-box">
            <div class="img-wrap">
                <img :src="eventData.EVimg" id="EVimg" class="img-fluid rounded mx-auto d-block" alt="Responsive image">
            </div>
        </div>
        <div class="col-md-7 detail-box">
            <div class="">
                <div class="detail-item">
                    <h5>展覽時間</h5>{{ eventData.startdate }} ~ {{ eventData.enddate }}
                </div>
                <div class="detail-item">
                    <h5>活動地點</h5>{{ eventData.venue }}
                </div>
                <div class="detail-item">
                    <h5>主辦單位</h5>{{ eventData.hostname }}
                </div>
                <a :href="'/Exhibitor/createEventInfo/?EVID=' + eventData.EVID" role="button" class="btn btn-lg btn-outline-danger m-1">申請參展</a>
            </div>
        </div>
        <div>
            <h5>展覽描述</h5>
            <div class="describe mt-4">
                <p>
                    {{ eventData.eventinfo }}
                </p>
            </div>
        </div>
        <div class="block-line"></div>
        <div>
            <h5>展覽平面圖</h5>
            <div class="describe mt-4">
                <img :src="eventData.FPimg" id="FPimg" class="img-fluid rounded mx-auto d-block" alt="Responsive image">
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        new Vue({
            el: '#contain',
            data: {
                eventData: {},

                evid: @ViewBag.EVID ,
                
            },
            created() {
                // 請到此 method 去撈取 api
                const self = this;

                @*self.evid = @ViewBag.EVID;*@
                this.loadPage();
            },
            mounted() {

            },
            methods: {
                loadPage() {
                    const self = this;

                    axios.post('/ExhibitorApi/getEventInfo/?EVID=' + self.evid)
                        .then(function (response) {
                            return response.data;

                        }).then(function (response) {

                            if (response.status === "success") {
                                self.eventData = response.data;

                                self.eventData.EVimg = "/Image/Host/" + self.eventData.image;
                                self.eventData.FPimg = "/Image/Host/" + self.eventData.floorplanimg;
                            }
                            else {
                                alert('讀取失敗');
                                console.log(response.data);
                            }
                        })
                },
            }
        })

    </script>
}