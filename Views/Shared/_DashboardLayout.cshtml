
@{
    ViewBag.Title = "_DashboardLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>展覽</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    @*@Scripts.Render("~/bundles/modernizr")*@
    @*<script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"></script>*@
    @Scripts.Render("~/Scripts/JQuery/jquery-3.4.1.min.js")
    @Styles.Render("~/Content/navbar.css")
    @Scripts.Render("~/Scripts/PartView/navbar.js")
    @Styles.Render("~/Content/w3.css")
    @Styles.Render("~/Content/Bootstrap/bootstrap.min.css")
    @Scripts.Render("~/Scripts/Bootstrap/bootstrap.bundle.min.js")

    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/Scripts/Vue.js")*@
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>

    <!-- RenderSection -->
    @RenderSection("styles", required: false)

    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    @Styles.Render("~/Content/Template/dashboard-sidebar.css")

</head>
<body>
    <div style="z-index: 200">
        @{
            Html.RenderAction("Navbar", "PartView");

        }
    </div>

    <div style="z-index: 201;position: relative;">
        @{
            Html.RenderAction("SideBarBtn", "PartView");

        }
    </div>
    <div class="row main-content m-0" style="min-height: 100vh;margin-left:auto;margin-right:auto;z-index: 180;">

        @{
            Html.RenderAction("SideBar", "PartView");
        }

        <div class="col-md-10">
            @RenderBody()
        </div>

    </div>

    @RenderSection("scripts", required: false)
    <script>
        Vue.config.devtools = true;
    </script>
</body>
</html>

