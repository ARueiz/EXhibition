
@{
    ViewBag.Title = "LoginExample";
}

@section styles{
    <link href="~/Content/myLogin.css" rel="stylesheet" />
}


<div class="container-fluid background-panel" id="contain" style="">
    <div class="d-block" style="height:50px;width: 100%;background-color: unset;"></div>
    <div class="loginPanel col-lg-3 col-md-5 col-sm-6">
        <div class="p-3 d-flex justify-content-center">
            <h3>登入</h3>
        </div>
        <div class="d-flex justify-content-center">
            <div class="w-75">
                <div v-show="showQRPage === false">
                    <div class="d-block mt-3">
                        <div class="d-block d-flex justify-content-center w-100">
                            <input class="w-100" type="text" placeholder="帳號">
                        </div>
                        <div class="d-block d-flex justify-content-center w-100">
                            <input class="w-100" type="password" placeholder="密碼">
                        </div>
                    </div>
                    <div class="d-block mt-3 w-100">
                        <button class="btn btn-primary w-100">登入</button>
                    </div>
                </div>
                <div v-show="showQRPage === true" class="">
                    <div class="d-flex justify-content-center">
                        <div id="qrcodeBox"></div>
                    </div>
                </div>
                <div class="mt-3 mb-3" style="height: 1.5px;background-color: #acacac"></div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-info w-100" v-on:click="showQRPage = !showQRPage;">
                        切換 QR code 登入
                    </button>
                </div>
                <div class="mt-3 d-block d-flex justify-content-between">
                    <a href="#">註冊</a>
                    <a href="#">忘記密碼</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.qrcode.min.js"></script>

<script>
    new Vue({
        el: '#contain',
        data() {
            return {
                showQRPage: false,
            }
        },
        created() {
            let count = 0
            const self = this;
        },
        methods: {
            createQRCode() {
                document.getElementById('qrcodeBox').innerHTML = "";
                $('#qrcodeBox').qrcode('http://www.google.com');
            },
            redirectPage() {
                
            }
        },
        watch: {
            showQRPage() {
                if (this.showQRPage) {
                    this.createQRCode()
                }
            }
        }
    })


</script>